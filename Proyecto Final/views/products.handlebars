<div class="prodsContainer">
  <div class="prodsLeft">
    <div class="categories">
      <h4>Categories</h4>
      {{#if response.category}}
        {{response.category}} <div><a href="http://localhost:8080/products/{{response.categoryLink}}">Clear</a></div>
      {{else}}
       <div><a href="http://localhost:8080/products/{{response.categoryLink}}&category=cpu">CPUs</a></div>
       <div><a href="http://localhost:8080/products/{{response.categoryLink}}&category=gpu">Videocards</a></div>
      {{/if}}
    </div>
    <div class="stockOnly">
      <h4>Stock</h4>
      {{#if response.stock }}
        <div>In stock Only</div>
        <div><a href="http://localhost:8080/products/{{response.stockLink}}">View all</a></div>
      {{else}}
        <div>All products</div>
        <div><a href="http://localhost:8080/products/{{response.stockLink}}&stock=true">In stock Only</a></div>
      {{/if}}
    </div>
  </div>
  <div class="prodsRight">
    <nav id="pagination" aria-label="producst pagination">
    <div class="dropdown">
      <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        View
      </a>

      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="http://localhost:8080/products/{{response.limitLink}}&limit=4">4</a></li>
        <li><a class="dropdown-item" href="http://localhost:8080/products/{{response.limitLink}}&limit=8">8</a></li>
        <li><a class="dropdown-item" href="http://localhost:8080/products/{{response.limitLink}}&limit=10">10</a></li>
      </ul>
    </div>

    <div class="dropdown">
      <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Sort
      </a>

      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="http://localhost:8080/products/{{response.sortLink}}">Dont sort</a></li>
        <li><a class="dropdown-item" href="http://localhost:8080/products/{{response.sortLink}}&sort=asc">Price asc</a></li>
        <li><a class="dropdown-item" href="http://localhost:8080/products/{{response.sortLink}}&sort=desc">Price desc</a></li>
      </ul>
    </div>


      <ul class="pagination">
        {{#if response.hasPrevPage}}
        <li class="page-item">
          <a class="page-link" href="http://localhost:8080/products/{{response.prevLink}}" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
          </li>
        <li class="page-item"><a class="page-link" href="http://localhost:8080/products/{{response.prevLink}}">{{response.prevPage}}</a></li>
        {{else}}
        <li class="page-item disabled">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{/if}} 
        <li class="page-item disabled"><a class="page-link" href="#">{{response.page}}</a></li>
        {{#if response.hasNextPage}}
        <li class="page-item"><a class="page-link" href="http://localhost:8080/products/{{response.nextLink}}">{{response.nextPage}}</a></li>
        <li class="page-item">
          <a class="page-link" href="http://localhost:8080/products/{{response.nextLink}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
        {{else}}
        <li class="page-item disabled">
          <a class="page-link" href="#" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
        {{/if}}

      </ul>
    </nav>
    <div class="container" id="products">
      {{#each response.payload}}
        <div class="card" style="width: 15rem;" onclick="redirect('{{this._id}}')">
            {{#if this.thumbnails.length}}
            <img src="{{this.thumbnails.[0]}}" class="card-img-top" alt="..." />
            {{else}}
            <img src="https://placehold.co/200x200" class="card-img-top" alt="..." />
            {{/if}}
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">$ {{this.price}}</p>
            </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
<script src="/js/products.js"></script>