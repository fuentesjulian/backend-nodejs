<div class="container">
  <div class="product">
    <div class="left">
      {{#if thumbnails.length}}
        <img src="{{thumbnails.[0]}}" class="card-img-top" alt="..." />
      {{else}}
        <img src="https://placehold.co/200x200" class="card-img-top" alt="..." />
      {{/if}}
    </div>
    <div class="right">
        <h1>{{title}}</h1>
        <p>Category: {{category}}</p>
        <div class="id">ID <span id="id">{{_id}}</span></div>
        <h2 class="price">$ {{price}}</h2>
        <div class="text">
            <p>Code: {{code}}</p>
            <p>{{description}}</p>
        </div>
        <div class="buttons">
            <div class="itemBtn" id="minusBtn">-</div>
            <div class="itemQ" id="quantity">1</div>
            <div class="itemBtn" id="plusBtn">+</div>
        </div>
        <div class="stock">
            <p>Stock <span id="stock">{{stock}}</span> un</p>
            <p id="inCart"></p>
        </div>
        
        <div class="confirm">
            <div class="btn btn-success" id="buyBtn">Add to cart</div>
            <div class="btn btn-danger" id="delBtn">Remove</div>
        </div>
        <a href="/products">Browse Products</a> 
        <a href="/carts" id="cartUrl">Go to cart</a>
    </div>
  </div>
</div>
<script src="/js/product.js"></script>